<body>
  <div class="wrap">
    <header>
      <h1>2지선다 스토리 게임</h1>
      <div class="dlg-row">
        <button class="btn" id="backBtn">뒤로</button>
        <button class="btn" id="restartBtn">처음</button>
        <button class="btn" id="imgBtn">사진 바꾸기</button>
      </div>
    </header>

    <section class="card">
      <p class="scene-title" id="sceneTitle"></p>
      <p class="scene-text" id="sceneText"></p>

      <div class="choices" id="choices"></div>

      <div class="footer">
        <span class="pill" id="progress"></span>
        <span class="pill" id="hint"></span>
      </div>
    </section>

    <!-- 선택지 사진 커스터마이즈(로컬 저장) -->
    <dialog id="imgDlg">
      <form method="dialog">
        <h2 style="margin:0 0 10px; font-size:16px;">현재 장면 선택지 사진 바꾸기</h2>
        <div class="dlg-row" style="margin-bottom:10px;">
          <div style="flex:1; min-width:220px;">
            <label>선택지 A 이미지 업로드</label><br/>
            <input type="file" accept="image/*" id="fileA" />
          </div>
          <div style="flex:1; min-width:220px;">
            <label>선택지 B 이미지 업로드</label><br/>
            <input type="file" accept="image/*" id="fileB" />
          </div>
        </div>
        <div class="dlg-row" style="justify-content:flex-end;">
          <button class="btn" value="cancel">닫기</button>
          <button class="btn" id="clearImgs" type="button">이 장면 사진 초기화</button>
        </div>
        <p class="note">
          업로드한 이미지는 이 브라우저(localStorage)에만 저장됨. GitHub Pages에 “영구”로 넣고 싶으면
          images 폴더에 파일을 올리고 STORY에서 경로로 지정하는 방식 추천.
        </p>
      </form>
    </dialog>

  </div>

  <script>
    /**
     * 2지선다 스토리 데이터
     * - id: 노드 ID (유니크)
     * - title/text: 장면 텍스트
     * - choices: 항상 2개 (A,B)로 가정
     *   - label: 버튼 제목
     *   - sub: 짧은 설명 (선택)
     *   - next: 다음 노드 id
     *   - img: (선택) 정적 이미지 경로 예: "images/forest.jpg"
     */
    const STORY = {
      start: {
        id: "start",
        title: "프롤로그",
        text: "눈을 떠보니 낯선 방. 문이 두 개다. 왼쪽? 오른쪽?",
        choices: [
          { key:"A", label:"왼쪽 문", sub:"바람 소리가 들린다", next:"forest", img:"" },
          { key:"B", label:"오른쪽 문", sub:"따뜻한 빛이 새어 나온다", next:"cafe", img:"" },
        ],
      },
      forest: {
        id:"forest",
        title:"숲길",
        text:"숲으로 나왔다. 길은 다시 둘로 갈린다.",
        choices: [
          { key:"A", label:"개울 따라가기", sub:"물소리 = 힌트일 수도", next:"river", img:"" },
          { key:"B", label:"언덕 오르기", sub:"시야 확보가 우선", next:"hill", img:"" },
        ],
      },
      cafe: {
        id:"cafe",
        title:"카페",
        text:"카페 같은 공간. 메뉴판엔 두 가지가 적혀 있다.",
        choices: [
          { key:"A", label:"아이스 아메리카노", sub:"정신 차리기", next:"awake", img:"" },
          { key:"B", label:"핫초코", sub:"안정이 필요", next:"calm", img:"" },
        ],
      },
      river: {
        id:"river",
        title:"개울",
        text:"바닥에 반짝이는 열쇠가 보인다. 줍는다? 지나친다?",
        choices: [
          { key:"A", label:"열쇠 줍기", sub:"인벤토리: 열쇠(가정)", next:"key", img:"" },
          { key:"B", label:"지나치기", sub:"시간을 아낀다", next:"no_key", img:"" },
        ],
      },
      hill: {
        id:"hill",
        title:"언덕",
        text:"정상에서 멀리 불빛. 다가간다? 숨어본다?",
        choices: [
          { key:"A", label:"불빛으로 이동", sub:"정면 돌파", next:"camp", img:"" },
          { key:"B", label:"숲에 숨기", sub:"상황 파악 우선", next:"hide", img:"" },
        ],
      },
      awake: {
        id:"awake",
        title:"엔딩",
        text:"커피를 마시자 기억이 돌아온다. 여기서 나갈 방법이 떠오른다. (END)",
        choices: [
          { key:"A", label:"처음으로", sub:"다른 루트 보기", next:"start", img:"" },
          { key:"B", label:"처음으로", sub:"다른 루트 보기", next:"start", img:"" },
        ],
      },
      calm: {
        id:"calm",
        title:"엔딩",
        text:"핫초코가 마음을 진정시킨다. 하지만 잠이 쏟아진다… (END)",
        choices: [
          { key:"A", label:"처음으로", sub:"다른 루트 보기", next:"start", img:"" },
          { key:"B", label:"처음으로", sub:"다른 루트 보기", next:"start", img:"" },
        ],
      },
      key: {
        id:"key",
        title:"엔딩",
        text:"열쇠가 문을 열어준다. 생각보다 쉽게 탈출! (END)",
        choices: [
          { key:"A", label:"처음으로", sub:"다른 선택 보기", next:"start", img:"" },
          { key:"B", label:"처음으로", sub:"다른 선택 보기", next:"start", img:"" },
        ],
      },
      no_key: {
        id:"no_key",
        title:"엔딩",
        text:"나중에 문을 열려고 했지만… 열쇠가 없었다. (END)",
        choices: [
          { key:"A", label:"처음으로", sub:"열쇠 루트 가보기", next:"start", img:"" },
          { key:"B", label:"처음으로", sub:"다른 루트 가보기", next:"start", img:"" },
        ],
      },
      camp: {
        id:"camp",
        title:"엔딩",
        text:"불빛은 누군가의 캠프였다. 도움을 받아 밖으로 나간다. (END)",
        choices: [
          { key:"A", label:"처음으로", sub:"다른 루트", next:"start", img:"" },
          { key:"B", label:"처음으로", sub:"다른 루트", next:"start", img:"" },
        ],
      },
      hide: {
        id:"hide",
        title:"엔딩",
        text:"숨어서 지켜보다가 타이밍을 놓쳤다… (END)",
        choices: [
          { key:"A", label:"처음으로", sub:"다시", next:"start", img:"" },
          { key:"B", label:"처음으로", sub:"다시", next:"start", img:"" },
        ],
      },
    };

    // --- 상태 ---
    const state = {
      cur: "start",
      history: [],
    };

    // --- DOM ---
    const sceneTitle = document.getElementById("sceneTitle");
    const sceneText = document.getElementById("sceneText");
    const choicesEl = document.getElementById("choices");
    const progressEl = document.getElementById("progress");
    const hintEl = document.getElementById("hint");

    const backBtn = document.getElementById("backBtn");
    const restartBtn = document.getElementById("restartBtn");
    const imgBtn = document.getElementById("imgBtn");
    const imgDlg = document.getElementById("imgDlg");

    const fileA = document.getElementById("fileA");
    const fileB = document.getElementById("fileB");
    const clearImgs = document.getElementById("clearImgs");

    // localStorage에 장면별 선택지 이미지(데이터URL) 저장
    function imgKey(nodeId, choiceKey){ return `img_override:${nodeId}:${choiceKey}`; }

    function getChoiceImage(nodeId, choice){
      // 1) override 이미지(업로드)
      const over = localStorage.getItem(imgKey(nodeId, choice.key));
      if (over) return over;
      // 2) STORY에 지정된 정적 경로
      if (choice.img) return choice.img;
      return "";
    }

    function render(){
      const node = STORY[state.cur];
      if (!node) {
        sceneTitle.textContent = "오류";
        sceneText.textContent = "존재하지 않는 장면입니다. STORY 데이터에서 next 값을 확인하세요.";
        choicesEl.innerHTML = "";
        return;
      }

      sceneTitle.textContent = node.title || "";
      sceneText.textContent = node.text || "";

      progressEl.textContent = `진행: ${state.history.length} step`;
      hintEl.textContent = `장면 ID: ${node.id}`;

      choicesEl.innerHTML = "";
      node.choices.forEach((c, idx) => {
        const btn = document.createElement("button");
        btn.className = "choice";
        btn.type = "button";
        btn.setAttribute("aria-label", c.label);

        const imgWrap = document.createElement("div");
        imgWrap.className = "img";

        const src = getChoiceImage(node.id, c);
        if (src) {
          const img = document.createElement("img");
          img.src = src;
          img.alt = c.label;
          img.loading = "lazy";
          imgWrap.innerHTML = "";
          imgWrap.appendChild(img);
        } else {
          imgWrap.textContent = idx === 0 ? "A 이미지" : "B 이미지";
        }

        const body = document.createElement("div");
        body.className = "choice-body";

        const t = document.createElement("p");
        t.className = "choice-text";
        t.textContent = c.label;

        const s = document.createElement("p");
        s.className = "choice-sub";
        s.textContent = c.sub || "";

        body.appendChild(t);
        body.appendChild(s);

        btn.appendChild(imgWrap);
        btn.appendChild(body);

        btn.addEventListener("click", () => {
          state.history.push(state.cur);
          state.cur = c.next;
          render();
          window.scrollTo({ top: 0, behavior: "smooth" });
        });

        choicesEl.appendChild(btn);
      });

      backBtn.disabled = state.history.length === 0;
    }

    backBtn.addEventListener("click", () => {
      const prev = state.history.pop();
      if (!prev) return;
      state.cur = prev;
      render();
    });

    restartBtn.addEventListener("click", () => {
      state.cur = "start";
      state.history = [];
      render();
    });

    imgBtn.addEventListener("click", () => {
      // 파일 인풋 초기화
      fileA.value = "";
      fileB.value = "";
      imgDlg.showModal();
    });

    function fileToDataURL(file){
      return new Promise((resolve, reject) => {
        const reader = new FileReader();
        reader.onload = () => resolve(String(reader.result || ""));
        reader.onerror = reject;
        reader.readAsDataURL(file);
      });
    }

    fileA.addEventListener("change", async () => {
      const nodeId = state.cur;
      const f = fileA.files?.[0];
      if (!f) return;
      const data = await fileToDataURL(f);
      localStorage.setItem(imgKey(nodeId, "A"), data);
      render();
    });

    fileB.addEventListener("change", async () => {
      const nodeId = state.cur;
      const f = fileB.files?.[0];
      if (!f) return;
      const data = await fileToDataURL(f);
      localStorage.setItem(imgKey(nodeId, "B"), data);
      render();
    });

    clearImgs.addEventListener("click", () => {
      const nodeId = state.cur;
      localStorage.removeItem(imgKey(nodeId, "A"));
      localStorage.removeItem(imgKey(nodeId, "B"));
      render();
    });

    render();
  </script>
</body>
</html>
